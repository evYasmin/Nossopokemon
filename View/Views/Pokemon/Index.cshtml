
@{
    ViewBag.Title = "Index";
}

<h3>Lista de Pokemons</h3>

<div class="row">
    <div class="col-10 offset-1 mb-3" ">
        <a class="btn btn-primary float-right" href="@Url.Action("Cadastro")">
            <i class="fas fa-plus"></i> Novo Pokemon
        </a>

    </div>
</div>

<table class="table table-striped  table-bordered">
    <thead class=" thead-dark">
        <tr>
            <th>Código</th>
            <th>Categoria</th>
            <th>Nome</th>
            <th>Ação</th>
        </tr>
    </thead>

    <tbody>
        @foreach (Model.Pokemon pokemon in ViewBag.Pokemons)
        {
            <tr>
                <td>@pokemon.Id</td>
                <td>@pokemon.Categoria.Nome</td>
                <td>@pokemon.Nome</td>
                <td>
                    <a href="@Url.Action("Editar" , new {id = pokemon.Id})"
                       class="btn btn-primary">
                        <i class="fas fa-pen"></i> Editar
                    </a>

                    <a href="@Url.Action("Apagar" , new {id = pokemon.Id})"
                       class="btn btn-danger">
                        <i class="fas fa-trash"></i> Apagar
                    </a>


                </td>

            </tr>
        }
    </tbody>

    <tfoot>
        <tr>
            <th>Código</th>
            <th>Categoria</th>
            <th>Nome</th>
            <th>Ação</th>
        </tr>
    </tfoot>

</table>

